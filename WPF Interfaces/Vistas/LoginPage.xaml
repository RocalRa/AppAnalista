<Page x:Class="WPF_Interfaces.Vistas.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Interfaces"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">
	
    <Grid Margin="10">
		<StackPanel Orientation="Vertical" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Width="400"
                    Height="400
                    ">
			<Label Content="LOGIN" HorizontalAlignment="Center" FontFamily="Verdana" FontWeight="Bold" Margin="15" FontSize="25"/>
			<Label Content="Usuario:" FontWeight="Bold" Margin="5" FontSize="15" HorizontalContentAlignment="Center"/>
			<TextBox Margin="10,0" x:Name="txtBoxUser" HorizontalContentAlignment="Center"/>
			<Label Content="Contrasena:" FontWeight="Bold" Margin="5" FontSize="15" HorizontalContentAlignment="Center" />
			<PasswordBox PasswordChar="*" Margin="10,0" x:Name="pwdBox" HorizontalContentAlignment="Center"/>
			<Button Margin="10" Content="Ingresar" Click="btnIngresar_Click" x:Name="btnIngresar" FontSize="15"/>

		</StackPanel>
        
    </Grid>
	
</Page>
